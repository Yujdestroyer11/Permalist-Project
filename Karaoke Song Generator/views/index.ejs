  <div class="flex-container">
    <div class="mid-container">
      <div class="content-container">
         <div>
          <h2 class="kanit">
            Don't know what to sing? 
          </h2>
          </div>
          <div>
          <form action="/submit" method="POST" class="rubik">
            <select name="type" class="border-r">
              <option value="" data-display="Select">
                Song Type
              </option>
              <option value="Pop">Pop</option>
              <option value="R&B">R&B</option>
              <option value="Soft rock">Soft rock</option>
              <option value="Soul">Soul</option>
            </select>
            <select name="year" class="border-r">
              <option value="">Year</option>
              <option value="1980">80's</option>
              <option value="1990">90's</option>
              <option value="2000">00's</option>
              <option value="2010">10's</option>
              <option value="2020">20's</option>
            </select>
            <button type="submit" class="border-r">Go</button>
          </form>
        </div>
        <div class="b-background">
          <% if (locals.data) { %>
            <h4> <%= data.songTitle %> by <%= data.singer %></h4>
          <%} else {  %>
            <h3 class="kanit"> Get a random song via type and year </h3>
          <%}%>
        </div>
        <div>
          <form action="/random" method="POST">
            <input type="submit" value="Give me a random song" class="rubik rSongButton">
        </form>  
          </div> 
          <div class="b-background">
           <% if (locals.rSong) { %>  
          <h4><%= rSong.songTitle %> by <%= rSong.singer %></h4>
        <%} else { %>  
          <h3 class="kanit">Random Song</h3>
        <% } %>  
        </div>
      </div>
    </div>
  </div>
